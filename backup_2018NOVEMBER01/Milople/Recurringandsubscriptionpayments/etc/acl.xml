				</resource>
	            </resource>
	     </resource>
             <!-- System Config Section of Extension -->
            <resource id="Magento_Backend::stores">
                <resource id="Magento_Backend::stores_settings">
                    <resource id="Magento_Config::config">
                     <resource id="Milople_Recurringandsubscriptionpayments::recurringandsubscriptionpayments_config" title="Milople System Config Section" />
                    </resource>
                </resource>
            </resource>
        </resource>
    </resources>
