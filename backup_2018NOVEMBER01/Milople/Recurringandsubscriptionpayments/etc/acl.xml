<acl>
   <resources>
        <resource id="Magento_Backend::admin">
             <!-- Menu of Extension -->
            <resource id="Milople_All::all" title="Milople Extensions" sortOrder="10" >
                    <resource id="Milople_Recurringandsubscriptionpayments::view" title="Milople Recurring and Subscription" sortOrder="40">
